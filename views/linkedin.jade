extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome  Check your details below:
						div.signup-wall
							ul.user-details
								li Email    ---> #{user.linkedin.email}
								li First Name ---> #{user.linkedin.firstName} 
								li Last Name ---> #{user.linkedin.lastName}
						a(href='/passport/signout', class='text-center new-account') Sign Out