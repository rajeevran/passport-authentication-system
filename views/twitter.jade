extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.firstName}. Check your details below:
						div.signup-wall
							ul.user-details
								li Id    ---> #{user.twitter.id}
								li User name ---> #{user.twitter.username} 
								li Display Name ---> #{user.twitter.displayName}
								li Last Status ---> #{user.twitter.lastStatus}
						a(href='/passport/signout', class='text-center new-account') Sign Out